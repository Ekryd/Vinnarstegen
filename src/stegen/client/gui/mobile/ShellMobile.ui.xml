<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='res' type='stegen.client.gui.mobile.ShellMobile.Resources'/>
	
	<ui:style>
	
		body {
			margin: 0px;
			padding: 0px;
		}
		.container {
		width: 640px;
		/* the auto value on the sides, coupled with the width, centers the layout */
		margin: 0 auto;
		position: relative;
		}
		
		.versionArea {
			/* Absolute is relative to the container div */
			position: absolute;
			z-index: 999;
			top: 11px;
			right: 15px;
			color: #e2e1d0;
		}
		.headerPanel {
			width: 100%;
		}
		.headerLogo {
			border: 1px solid #CCC
		}
		.userArea_left {
			float: left;
			width: 50%;
			height: 30px;
			position: relative;
			padding: 5px;
		}
		.logoutArea_right {
			float: right;
			width: 8%;
			height: 30px;
			padding: 5px;
		}
		.refreshPanel {
			position: relative;
			height: 30px;
			padding: 5px;
			z-index: 999;
		}								
		.contentPanel {
			float: left;
			width: 100%;
			padding: 5px;
			position: absolute;
		}
	</ui:style>
	
	
     <g:DockLayoutPanel unit='PX' styleName="{style.container}">
     	<g:north size="170">
     	<g:FlowPanel styleName="{style.headerPanel">
         	
			<g:Image resource='{res.logo}' styleName="{style.headerLogo}"/>         

       		<g:FlowPanel styleName="{style.versionArea}" ui:field="versionArea"/>
         		
            <g:FlowPanel styleName="{style.userArea_left}" ui:field="userArea" />	           

	        <g:FlowPanel styleName="{style.logoutArea_right}" ui:field="logoutArea" />  

	        <g:FlowPanel styleName="{style.refreshPanel}" ui:field="refreshArea" />
	      
         	
     
     	</g:FlowPanel>
     	
     	</g:north>
       <g:center>
         <g:LayoutPanel  styleName="{style.contentPanel}" ui:field="mainArea"/>
       </g:center>
     </g:DockLayoutPanel>
     
   
</ui:UiBinder> 